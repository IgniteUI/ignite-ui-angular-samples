{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
        "igniteui-angular-core/ES5/*":   ["node_modules/@infragistics/igniteui-angular-core/ES5/*"],
        "igniteui-angular-charts/ES5/*": ["node_modules/@infragistics/igniteui-angular-charts/ES5/*"],
        "igniteui-angular-gauges/ES5/*": ["node_modules/@infragistics/igniteui-angular-gauges/ES5/*"]
    },
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
